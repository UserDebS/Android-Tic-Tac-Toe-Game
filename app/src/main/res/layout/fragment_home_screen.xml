<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/fragment_home_screen"
    android:layout_gravity="center"
    android:background="#E8E85F"
    tools:context=".screens.HomeScreenFragment">

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button_nav_computer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/computer"
        android:textColor="@color/blue"
        android:textStyle="bold"
        android:padding="10dp"
        android:background="@drawable/rounded_button"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/button_nav_player"

        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button_nav_player"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/player"
        android:textColor="@color/blue"
        android:textStyle="bold"
        android:padding="10dp"
        android:background="@drawable/rounded_button"
        app:layout_constraintTop_toBottomOf="@+id/button_nav_computer"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>